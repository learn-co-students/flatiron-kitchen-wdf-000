<%= form_for @recipe do |f| %>
  <%= f.text_field :name, placeholder: 'name...' %>

  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>

  <%= f.fields_for :ingredients, @recipe.ingredients do |ing| %>
    <%= ing.text_field :name %>
  <% end %>
  
  <%= f.submit 'Update Recipe' %>
<% end %>