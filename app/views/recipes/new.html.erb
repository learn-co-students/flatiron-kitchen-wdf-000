<%= form_for @recipe do |f| %>
<%= f.label "Name" %>
<%= f.text_field :name %>


<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name%>



<%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_field| %>
<%= ingredients_field.text_field :name %>
<% end %>
<%= f.submit %>

<% end %>
