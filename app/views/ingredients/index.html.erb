<h1>Ingredients Index:</h1>

<div style="display: flex; justify-content: space-between;">
  <%= form_tag ingredients_path, method: :get do %>
    <div>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Search", name: nil %>
    </div>
  <% end %>
  <div><%= link_to "View Recipes", recipes_path %></div>
  <div><%= link_to "Add New Ingredient", new_ingredient_path %></div>
</div>

<% @ingredients.all.each do |ingredient| %>
  <%= render partial: 'ingredient', locals: {ingredient: ingredient} %>
<% end %>
