<h1>Ingredients Index:</h1>

<div>
  <%= form_tag ingredients_path, method: :get do %>
    <div>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Search", name: nil %>
    </div>
  <% end %>
</div>

<% @ingredients.all.each do |ingredient| %>
  <%= render partial: 'ingredient', locals: {ingredient: ingredient} %>
<% end %>
